{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": ":check",
			"type": "shell",
			"group": "test",
			"windows": {
				"command": "${workspaceFolder}\\gradlew.bat check"
			},
			"linux": {
				"command": "${workspaceFolder}\\gradlew check"
			}
		},
		{
			"label": ":test",
			"type": "shell",
			"group": "test",
			"windows": {
				"command": "${workspaceFolder}\\gradlew.bat test"
			},
			"linux": {
				"command": "${workspaceFolder}\\gradlew test"
			}
		}
	]
}